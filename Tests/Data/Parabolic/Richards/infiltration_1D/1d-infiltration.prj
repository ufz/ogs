<?xml version="1.0" encoding="ISO-8859-1"?>
<OpenGeoSysProject>
    <meshes>
        <mesh>1d-infiltration.vtu</mesh>
        <mesh>1d-infiltration_top.vtu</mesh>
    </meshes>
    <processes>
        <process>
            <name>Hus</name>
            <type>RICHARDS_FLOW</type>
            <integration_order>4</integration_order>
            <jacobian_assembler>
                <type>CentralDifferences</type>
                <component_magnitudes>1e4</component_magnitudes>
                <relative_epsilons>1e-12</relative_epsilons>
            </jacobian_assembler>
            <process_variables>
                <process_variable>pressure</process_variable>
            </process_variables>
            <secondary_variables>
                <secondary_variable internal_name="saturation" output_name="saturation"/>
                <secondary_variable internal_name="darcy_velocity" output_name="darcy_velocity"/>
            </secondary_variables>
            <specific_body_force>-9.81</specific_body_force>
            <mass_lumping>true</mass_lumping>
        </process>
    </processes>
    <media>
        <medium>
            <phases>
                <phase>
                    <type>AqueousLiquid</type>
                    <properties>
                        <property>
                            <name>viscosity</name>
                            <type>Constant</type>
                            <value>1.e-3</value>
                        </property>
                        <property>
                            <name>density</name>
                            <type>Constant</type>
                            <value>1.e3</value>
                        </property>
                    </properties>
                </phase>
                <phase>
                    <type>Solid</type>
                    <properties>
                        <property>
                            <name>storage</name>
                            <type>Constant</type>
                            <!-- <value>1e-9</value> HYDRUS is not using any storage coefficient for the saturated zone --> 
                            <value>0</value>
                        </property>
                        <property>
                            <name>porosity</name>
                            <type>Constant</type>
                            <value>0.43</value>
                        </property>
                        <property>
                            <name>permeability</name>
                            <type>Constant</type>
                            <value>2.94484086533016E-13</value>
                        </property>
                    </properties>
                </phase>
            </phases>
            <properties>
                <property>
                    <name>reference_temperature</name>
                    <type>Constant</type>
                    <value>293.15</value>
                </property>
                <property>
                    <name>relative_permeability</name>
                    <type>RelativePermeabilityVanGenuchten</type>
                    <exponent>0.358974358974359</exponent>
                    <minimum_relative_permeability_liquid>1e-3</minimum_relative_permeability_liquid>
                    <residual_liquid_saturation>0.18139535</residual_liquid_saturation>
                    <residual_gas_saturation>0.0</residual_gas_saturation>
                </property>
                <property>
                    <name>saturation</name>
                    <type>SaturationVanGenuchten</type>
                    <residual_liquid_saturation>0.18139535</residual_liquid_saturation>
                    <residual_gas_saturation>0.0</residual_gas_saturation>
                    <exponent>0.358974358974359</exponent>
                    <entry_pressure>2725</entry_pressure>
                </property>
            </properties>
        </medium>
    </media>
    <time_loop>
        <processes>
            <process ref="Hus">
                <nonlinear_solver>NLS</nonlinear_solver>
                <convergence_criterion>
                    <type>DeltaX</type>
                    <norm_type>NORM2</norm_type>
                    <reltol>1e-8</reltol>
                </convergence_criterion>
                <time_discretization>
                    <type>BackwardEuler</type>
                </time_discretization>
                <time_stepping>
                    <type>IterationNumberBasedTimeStepping</type>
                    <t_initial>0.0</t_initial>
                    <t_end>86400</t_end>
                    <initial_dt>0.1</initial_dt>
                    <minimum_dt>0.1</minimum_dt>
                    <maximum_dt>100</maximum_dt>
                    <number_iterations>1    10  15  20  25  100</number_iterations>
                    <multiplier>       1.25 1.2 1.1 0.9 0.5 0.1</multiplier>
                </time_stepping>
            </process>
        </processes>
        <output>
            <type>VTK</type>
            <prefix>out_ex1</prefix>
            <timesteps>
                <pair>
                    <repeat>1</repeat>
                    <each_steps>10</each_steps>
                </pair>
            </timesteps>
            <variables>
                <variable>pressure</variable>
                <variable>saturation</variable>
                <variable>darcy_velocity</variable>
            </variables>
        </output>
    </time_loop>
    <parameters>
        <parameter>
            <name>p_ini_const</name>
            <type>Constant</type>
            <value>-9810</value>
        </parameter>
        <parameter>
            <name>p_1cm</name>
            <type>Constant</type>
            <value>98.1</value>
        </parameter>
    </parameters>
    <process_variables>
        <process_variable>
            <name>pressure</name>
            <components>1</components>
            <order>1</order>
            <initial_condition>p_ini_const</initial_condition>
            <boundary_conditions>
                <boundary_condition>
                    <geometrical_set>1d-infiltration</geometrical_set>
                    <geometry>top</geometry>
                    <type>Dirichlet</type>
                    <parameter>p_1cm</parameter>
                </boundary_condition>
            </boundary_conditions>
        </process_variable>
    </process_variables>
    <nonlinear_solvers>
        <nonlinear_solver>
            <name>NLS</name>
            <type>Newton</type>
            <max_iter>30</max_iter>
            <linear_solver>general_linear_solver</linear_solver>
        </nonlinear_solver>
    </nonlinear_solvers>
    <linear_solvers>
        <linear_solver>
            <name>general_linear_solver</name>
            <eigen>
                <solver_type>SparseLU</solver_type>
                <scaling>true</scaling>
            </eigen>
        </linear_solver>
    </linear_solvers>
</OpenGeoSysProject>
